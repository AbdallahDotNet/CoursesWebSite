@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model ContainerViewModels
@{
    ViewData["Title"] = "GalleryForm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="db-breadcrumb">
    <h4 class="breadcrumb-title">@localizer["Gallery"]</h4>
    <ul class="db-breadcrumb-list">
        <li><a href="/admin/index"><i class="fa fa-home"></i>@localizer["Home"]</a></li>
        @if (Model.Save_gallery.Id == Guid.Empty)
        {
            <li>@localizer["Add Gallery"]</li>
        }
        else
        {
            <li>@localizer["Update Gallery"]</li>
        }
    </ul>
</div>
<div class="row">
    <!-- Your Profile Views Chart -->
    <div class="col-lg-12 m-b30">
        <div class="widget-box">
            <div class="wc-title">
                @if (Model.Save_gallery.Id == Guid.Empty)
                {
                    <h4>@localizer["Add Gallery"]</h4>
                }
                else
                {
                    <h4>@localizer["Update Gallery"]</h4>
                }
            </div>
            <div class="widget-inner">
                <form asp-action="Save" class="edit-profile m-b30" enctype="multipart/form-data">
                    @if (Model.Save_gallery.Id != Guid.Empty)
                    {
                        <input type="hidden" asp-for="Save_gallery.Id" />
                    }
                    <div class="row">
                        <div class="col-12">
                            <div class="ml-auto">
                            </div>
                        </div>
                        <div class="form-group col-6">
                            <label class="col-form-label">@localizer["Discription"]</label>
                            <div>
                                <input asp-for="Save_gallery.Description" class="form-control">
                            </div>
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.Save_gallery.Description)</label>
                        </div>
                        <div class="form-group col-6">
                            <label class="col-form-label">@localizer["Image"]</label>
                            <div>
                                @if (Model.Save_gallery.Id != Guid.Empty)
                                {<input type="hidden" asp-for="Save_gallery.Image" />}
                                <input type="file" asp-for="Save_gallery.File" class="form-control">
                            </div>
                        </div>
                        <div class="col-12">
                            @if (!string.IsNullOrEmpty(Model.Save_gallery.Error))
                            {
                                <div class="alert alert-danger">@Model.Save_gallery.Error</div>
                            }
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn">@localizer["Save changes"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Your Profile Views Chart END-->
</div>