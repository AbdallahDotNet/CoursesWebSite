@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model ContainerViewModels
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="db-breadcrumb">
    <h4 class="breadcrumb-title">@localizer["Soical"]</h4>
    <ul class="db-breadcrumb-list">
        <li><a href="/admin/index"><i class="fa fa-home"></i>@localizer["Home"]</a></li>
        <li>@localizer["Soical"]</li>
    </ul>
</div>
@if (Model.Get_soical == null)
{
    <div class="add">
        <a href="/soical/add" class="btn-secondry add-item m-r5"><i class="fa fa-fw fa-plus-circle"></i>@localizer["Add New"]</a>
        <br /><br />
    </div>
}
<div class="row">
    <!-- Your Profile Views Chart -->
    <div class="col-lg-12 m-b30">
        <div class="widget-box">
            <div class="email-wrapper">
                <div class="mail-list-container">
                    <div class="mail-box-list">
                        @if (Model.Get_soical == null)
                        {
                            <div class="alert alert-danger">@localizer["There is no soical exist"]</div>
                        }
                        else
                        {
                            <div class="mail-list-info">
                                <div class="mail-list-title">
                                    <h6>1 . @localizer["Facebook"] : @Model.Get_soical.Facebook</h6>
                                </div>
                                <ul class="mailbox-toolbar">
                                    <li data-toggle="tooltip" title="Edit"><a href="/soical/update/@Model.Get_soical.Id"><i class="fa fa-edit"></i></a></li>
                                </ul>
                            </div>
                            <div class="mail-list-info">
                                <div class="mail-list-title">
                                    <h6>2 . @localizer["LinkedIn"] : @Model.Get_soical.Linkedin</h6>
                                </div>
                                <ul class="mailbox-toolbar">
                                    <li data-toggle="tooltip" title="Edit"><a href="/soical/update/@Model.Get_soical.Id"><i class="fa fa-edit"></i></a></li>
                                </ul>
                            </div>
                            <div class="mail-list-info">
                                <div class="mail-list-title">
                                    <h6>3 . @localizer["Twitter"] : @Model.Get_soical.Twitter</h6>
                                </div>
                                <ul class="mailbox-toolbar">
                                    <li data-toggle="tooltip" title="Edit"><a href="/soical/update/@Model.Get_soical.Id"><i class="fa fa-edit"></i></a></li>
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Your Profile Views Chart END-->
</div>
