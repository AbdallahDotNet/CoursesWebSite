@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model ContainerViewModels
@{
    ViewData["Title"] = "SoicalForm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="db-breadcrumb">
    <h4 class="breadcrumb-title">@localizer["Soical"]</h4>
    <ul class="db-breadcrumb-list">
        <li><a href="/admin/index"><i class="fa fa-home"></i>@localizer["Home"]</a></li>
        @if (Model.Save_soical.Id == Guid.Empty)
        {
            <li>@localizer["Add Soical"]</li>
        }
        else
        {
            <li>@localizer["Update Soical"]</li>
        }
    </ul>
</div>
<div class="row">
    <!-- Your Profile Views Chart -->
    <div class="col-lg-12 m-b30">
        <div class="widget-box">
            <div class="wc-title">
                @if (Model.Save_soical.Id == Guid.Empty)
                {
                    <h4>@localizer["Add Soical"]</h4>
                }
                else
                {
                    <h4>@localizer["Update Soical"]</h4>
                }
            </div>
            <div class="widget-inner">
                <form asp-action="Save" class="edit-profile m-b30">
                    @if (Model.Save_soical.Id != Guid.Empty)
                    {
                        <input type="hidden" asp-for="Save_soical.Id" />
                    }
                    <div class="row">
                        <div class="col-12 m-t20">
                            <div class="ml-auto">
                                <h3 class="m-form__section">@localizer["Social Links"]</h3>
                            </div>
                        </div>

                        <div class="form-group col-6">
                            <label class="col-form-label">@localizer["Linkedin"]</label>
                            <div>
                                <input asp-for="Save_soical.Linkedin" class="form-control" type="text">
                            </div>
                        </div>
                        <div class="form-group col-6">
                            <label class="col-form-label">@localizer["Facebook"]</label>
                            <div>
                                <input asp-for="Save_soical.Facebook" class="form-control" type="text">
                            </div>
                        </div>
                        <div class="form-group col-6">
                            <label class="col-form-label">@localizer["Twitter"]</label>
                            <div>
                                <input asp-for="Save_soical.Twitter" class="form-control" type="text">
                            </div>
                        </div>
                        <div class="col-12">
                            @if (!string.IsNullOrEmpty(Model.Save_soical.Error))
                            {
                                <div class="alert alert-danger">@Model.Save_soical.Error</div>
                            }
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn">@localizer["Save changes"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Your Profile Views Chart END-->
</div>
