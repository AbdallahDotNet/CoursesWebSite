@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model ContainerViewModels
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="page-content bg-white">
    <!-- inner page banner -->
    <div class="page-banner ovbl-dark" style="background-image:url(/Client_assets/images/banner/banner3.jpg);">
        <div class="container">
            <div class="page-banner-entry">
                <h1 class="text-white">@localizer["Courses Details"]</h1>
            </div>
        </div>
    </div>
    <!-- Breadcrumb row -->
    <div class="breadcrumb-row">
        <div class="container">
            <ul class="list-inline">
                <li><a href="/home/index">@localizer["Home"]</a></li>
                <li>@localizer["Courses Details"]</li>
            </ul>
        </div>
    </div>
    <!-- Breadcrumb row END -->
    <!-- inner page banner END -->
    <div class="content-block">
        <!-- About Us -->
        <div class="section-area section-sp1">
            <div class="container">
                <div class="row d-flex flex-row-reverse">
                    <div class="col-lg-3 col-md-4 col-sm-12 m-b30">
                        <div class="course-detail-bx">
                            <div class="course-price">
                                @if (Model.Save_course.Discount_value != 0)
                                {
                                    <del>@Model.Get_application_intro.Coin @Model.Save_course.Price</del>
                                    <h4 class="price">@Model.Get_application_intro.Coin @Model.Save_course.Price_after_discount</h4>
                                }
                                else
                                {
                                    <h4 class="price">@Model.Get_application_intro.Coin @Model.Save_course.Price</h4>
                                }
                            </div>
                            <div class="course-buy-now text-center">
                                <a href="/booking/bookingForm/@Model.Save_course.Id" class="btn text-uppercase" style="border-radius:20px">@localizer["Booking Now"]</a>
                            </div>
                            <div class="teacher-bx">
                                <div class="teacher-info">
                                    <div class="teacher-thumb">
                                        <img src="~/Upload/Instructors/@Model.Save_course.Instructors.Image" alt="" />
                                    </div>
                                    <div class="teacher-name">
                                        <h5>@Model.Save_course.Instructors.Name</h5>
                                        <span>@Model.Save_course.Instructors.Specialty</span>
                                    </div>
                                </div>
                            </div>
                            <div class="cours-more-info">
                                <div class="review">
                                    <span>@localizer["Rate"]</span>
                                    <ul class="cours-star">
                                        @{
                                            var rate = Model.Save_course.Instructors.Rate;

                                            for (int i = 0; i < rate; i++)
                                            {
                                                <li class="active"><i class="fa fa-star"></i></li>
                                            }
                                        }
                                    </ul>
                                </div>
                                <div class="price categories">
                                    <span>@localizer["Categories"]</span>
                                    <h5 class="text-primary">@Model.Save_course.Course_specialty.Specialty</h5>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-9 col-md-8 col-sm-12">
                        <div class="courses-post">
                            <div class="ttr-post-media media-effect">
                                <a href="#"><img src="~/Upload/Courses/@Model.Save_course.Image" alt=""></a>
                            </div>
                            <div class="ttr-post-info">
                                <div class="ttr-post-title ">
                                    <h2 class="post-title">@Model.Save_course.Title</h2>
                                </div>
                                <div class="ttr-post-text">
                                    @Html.Raw(Model.Save_course.Course_details)
                                </div>
                            </div>
                        </div>
                        <div class="" id="instructor">
                            <h4>@localizer["Instructor"]</h4>
                            <div class="instructor-bx">
                                <div class="instructor-author">
                                    <img src="~/Upload/Instructors/@Model.Save_course.Instructors.Image" alt="">
                                </div>
                                <div class="instructor-info">
                                    <h6>@Model.Save_course.Instructors.Name</h6>
                                    <span>@Model.Save_course.Instructors.Specialty</span>
                                    <ul class="list-inline m-tb10">
                                        @if (!string.IsNullOrEmpty(Model.Save_course.Instructors.Facebook))
                                        {
                                            <li><a href="@Model.Save_course.Instructors.Facebook" class="btn sharp-sm facebook"><i class="fa fa-facebook"></i></a></li>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.Save_course.Instructors.Twitter))
                                        {
                                            <li><a href="@Model.Save_course.Instructors.Twitter" class="btn sharp-sm twitter"><i class="fa fa-twitter"></i></a></li>
                                        }
                                        @if (!string.IsNullOrEmpty(Model.Save_course.Instructors.Linkedin))
                                        {
                                            <li><a href="@Model.Save_course.Instructors.Linkedin" class="btn sharp-sm linkedin"><i class="fa fa-linkedin"></i></a></li>
                                        }
                                    </ul>
                                    <p class="m-b0">@Model.Save_course.Instructors.Short_description</p>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <!-- contact area END -->

</div>
