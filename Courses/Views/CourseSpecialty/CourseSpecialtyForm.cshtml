@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model ContainerViewModels
@{
    ViewData["Title"] = "CourseSpecialtyForm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="db-breadcrumb">
    <h4 class="breadcrumb-title">@localizer["Course Specialty"]</h4>
    <ul class="db-breadcrumb-list">
        <li><a href="/admin/index"><i class="fa fa-home"></i>@localizer["Home"]</a></li>
        @if (Model.Save_course_specialty.Id == Guid.Empty)
        {
            <li>@localizer["Add Course Specialty"]</li>
        }
        else
        {
            <li>@localizer["Update Course Specialty"]</li>
        }
    </ul>
</div>
<div class="row">
    <!-- Your Profile Views Chart -->
    <div class="col-lg-12 m-b30">
        <div class="widget-box">
            <div class="wc-title">
                @if (Model.Save_course_specialty.Id == Guid.Empty)
                {
                    <h4>@localizer["Add Course Specialty"]</h4>
                }
                else
                {
                    <h4>@localizer["Update Course Specialty"]</h4>
                }
            </div>
            <div class="widget-inner">
                <form asp-action="Save" class="edit-profile m-b30">
                    @if (Model.Save_course_specialty.Id != Guid.Empty)
                    {
                        <input type="hidden" asp-for="Save_course_specialty.Id" />
                    }
                    <div class="row">
                        <div class="form-group col-6">
                            <label class="col-form-label">@localizer["Specialty"]</label>
                            <div>
                                <input asp-for="Save_course_specialty.Specialty" class="form-control">
                            </div>
                            <label class="text-danger">@Html.ValidationMessageFor(m => m.Save_course_specialty.Specialty)</label>
                        </div>
                        <div class="col-12">
                            <button type="submit" class="btn">@localizer["Save changes"]</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Your Profile Views Chart END-->
</div>
