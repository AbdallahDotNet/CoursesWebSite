@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@model ContainerViewModels
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="db-breadcrumb">
    <h4 class="breadcrumb-title">@localizer["Dashboard"]</h4>
    <ul class="db-breadcrumb-list">
        <li><a href="/admin/index"><i class="fa fa-home"></i>@localizer["Home"]</a></li>
        <li>@localizer["Dashboard"]</li>
    </ul>
</div>
<!-- Card -->
<div class="row">
    <div class="col-md-6 col-lg-6 col-xl-6 col-sm-6 col-12">
        <div class="widget-card widget-bg1">
            <div class="wc-item">
                <h4 class="wc-title">
                    @localizer["Total Courses"]
                </h4>
                <span class="wc-des">
                    @localizer["Latest Count"]
                </span>
                <span class="wc-stats">
                    <span class="counter">@Model.Get_cousrses.Where(x => x.Is_active == true).Count()</span>
                </span>
                <div class="progress wc-progress">
                    <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-6 col-xl-6 col-sm-6 col-12">
        <div class="widget-card widget-bg2">
            <div class="wc-item">
                <h4 class="wc-title">
                    @localizer["Total Events"]
                </h4>
                <span class="wc-des">
                    @localizer["Latest Count"]
                </span>
                <span class="wc-stats counter">
                    @Model.Get_events.Where(x => x.Is_active == true).Count()
                </span>
                <div class="progress wc-progress">
                    <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-6 col-xl-6 col-sm-6 col-12">
        <div class="widget-card widget-bg3">
            <div class="wc-item">
                <h4 class="wc-title">
                    @localizer["Total Admin"]
                </h4>
                <span class="wc-des">
                    @localizer["Latest Count"]
                </span>
                <span class="wc-stats counter">
                    @Model.Get_users.Count()
                </span>
                <div class="progress wc-progress">
                    <div class="progress-bar" role="progressbar" style="width: 100%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-6 col-xl-6 col-sm-6 col-12">
        <div class="widget-card widget-bg4">
            <div class="wc-item">
                <h4 class="wc-title">
                    @localizer["Total Blogs"]
                </h4>
                <span class="wc-des">
                    @localizer["Latest Count"]
                </span>
                <span class="wc-stats counter">
                    @Model.Get_blogs.Where(x => x.Is_active == true).Count()
                </span>
                <div class="progress wc-progress">
                    <div class="progress-bar" role="progressbar" style="width: 90%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Card END -->
<div class="row">
    <div class="col-lg-6 m-b30">
        <div class="widget-box">
            <div class="wc-title">
                <h4>@localizer["Latest Courses"]</h4>
            </div>
            <div class="widget-inner">
                <div class="orders-list">
                    <ul>
                        @if (Model.Get_cousrses.Where(x => x.Is_active == true).Count() == 0)
                        {
                            <li>
                                <div class="alert alert-danger">@localizer["no courses exist"]</div>
                            </li>
                        }
                        else
                        {
                            @foreach (var course in Model.Get_cousrses.Where(x => x.Is_active == true).Take(5))
                            {
                                <li>
                                    <span class="orders-title">
                                        <a class="orders-title-name">@course.Title</a>
                                        <span class="orders-info">@course.Course_specialty.Specialty</span>
                                    </span>
                                    <span class="orders-btn">
                                        <a class="btn button-sm black" style="color:#fff">@course.Price</a>
                                    </span>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 m-b30">
        <div class="widget-box">
            <div class="wc-title">
                <h4>@localizer["Latest Events"]</h4>
            </div>
            <div class="widget-inner">
                <div class="orders-list">
                    <ul>
                        @if (Model.Get_events.Where(x => x.Is_active == true).Count() == 0)
                        {
                            <li>
                                <div class="alert alert-danger">@localizer["no events exist"]</div>
                            </li>
                        }
                        else
                        {
                            @foreach (var Event in Model.Get_events.Where(x => x.Is_active == true).Take(5))
                            {
                                <li>
                                    <span class="orders-title">
                                        <a class="orders-title-name">@Event.Title</a>
                                        <span class="orders-info">@Event.Date.ToString("d/M/yyyy h:m")</span>
                                    </span>
                                    <span class="orders-btn">
                                        @if (Event.Timing == 0)
                                        {
                                            <a class="btn button-sm green" style="color:#fff"><b>AM</b></a>
                                        }
                                        else
                                        {
                                            <a class="btn button-sm red" style="color:#fff"><b>PM</b></a>
                                        }
                                    </span>
                                </li>
                            }
                        }

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

